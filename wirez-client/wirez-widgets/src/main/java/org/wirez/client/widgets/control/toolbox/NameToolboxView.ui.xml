<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:style>
    .mainPanel {
      z-index: 10;
      min-height: 20px;
      min-width: 80px;
    }
    .jumbotron {
      padding: 5px;
    }
    .closeButton {
      margin-left: 5px;
    }
  </ui:style>

  <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">

    <b:Jumbotron addStyleNames="{style.jumbotron}">
      <g:HorizontalPanel>
        <b:TextBox ui:field="nameBox"/>
        <b:Icon ui:field="closeButton" type="REMOVE" size="LARGE" addStyleNames="{style.closeButton}"/>
      </g:HorizontalPanel>
    </b:Jumbotron>
    
  </g:FlowPanel>
  

</ui:UiBinder>